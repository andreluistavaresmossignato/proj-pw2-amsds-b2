  <script>
    // Passando os dados do PHP para JS via echo inline
    const statusConquistas = [
        <?php echo $conquista1 ? 'true' : 'false'; ?>,
        <?php echo $conquista2 ? 'true' : 'false'; ?>,
        <?php echo $conquista3 ? 'true' : 'false'; ?>
    ];

    const emojis = [
        <?php
        foreach ($emojis as $e) {
            echo "'" . $e . "',";
        }
        ?>
    ];

    const descricoes = [
        <?php
        foreach ($descricoes as $d) {
            echo "'" . $d . "',";
        }
        ?>
    ];

    const container = document.getElementById('listaConquistas');

    for(let i = 0; i < statusConquistas.length; i++) {
        const divWrapper = document.createElement('div');
        divWrapper.classList.add('conquistaContainer');

        const divEmoji = document.createElement('div');
        divEmoji.classList.add('caixaConquista');
        divEmoji.textContent = statusConquistas[i] ? emojis[i] : 'â”';

        const divDesc = document.createElement('div');
        divDesc.classList.add('descricao');
        divDesc.textContent = statusConquistas[i] ? descricoes[i] : '?';

        divWrapper.appendChild(divEmoji);
        divWrapper.appendChild(divDesc);
        container.appendChild(divWrapper);
    }
</script>

